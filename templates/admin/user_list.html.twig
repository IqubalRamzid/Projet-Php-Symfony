{% extends "base.html.twig" %}

{% block body %}

	<table>

		<thead>
			<tr>
				<th>nom d'utilisateur</th>
				<th>nom</th>
				<th>prenom</th>
				<th>adresse</th>
				<th>Ville</th>
				<th>code postal</th>
				<th>Roles</th>
				<th>telephone</th>
				<th>Email</th>
				<th>id</th>

			</tr>

		</thead>

	</thead>

	<tbody>

		{% for users in users %}


			<tr>

				<td>{{users.username}}</td>
				<td>{{users.nom}}</td>
				<td>{{users.prenom}}
				</td>
				<td>{{users.adresse}}</td>
				<td>{{users.ville}}</td>
				<td>{{users.codepostal}}</td>

				<td>
					{% for roles in users.roles %}
						{{ roles }}
					{% endfor %}
				</td>
				<td>{{users.telephone}}</td>
				<td>{{users.username}}</td>
				<td>{{users.id}}</td>

				{# pas mettre l'underscore pour code_postal ca fait une erreur #}
				<td>
					<a href="{{ path('Admin_list_user', {'id' : users.id } ) }}">
						<i class="fa-solid fa-magnifying-glass"></i>
					</a>
					<a href="{{ path('Admin_update_user', {'id' : users.id }) }}">
						<i class="fa-solid fa-pen-to-square"></i>
					</a>
					<a href="{{ path('Admin_delete', {'id' : users.id }) }}">
						<i class="fa-solid fa-trash-can"></i>
					</a>
				</td>

			</tr>

		{% else %}

			<tr colspan|></tr>


		{% endfor %}

	</tbody>

</table>

<style>
	table,
	td,
	th {
		border: 1px solid;
	}

	table {
		width: 100%;
		border-collapse: collapse;
	}
</style>{% endblock %}
